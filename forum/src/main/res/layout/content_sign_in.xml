<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProfileActivity"
    tools:showIn="@layout/activity_sign_in">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            app:contentPadding="8dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:padding="4dp"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:text="@string/profile"
                    android:layout_height="wrap_content" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/ch"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/sigup_fullname"
                        android:focusable="false"
                        android:editable="false"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:inputType="text"
                        android:hint="@string/fullname"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/sigup_email"
                        android:editable="false"
                        android:focusable="false"
                        android:text="@string/email_example_com"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/email"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/sigup_phone"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:hint="@string/phone"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/sigup_address"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:gravity="start"
                        android:hint="@string/address"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_gravity="center"
                    android:text="@string/update"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           app:contentPadding="8dp"
           android:layout_margin="8dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <!--subscription-->
               <TextView
                   android:layout_width="match_parent"
                   android:textAlignment="center"
                   android:padding="4dp"
                   style="@style/TextAppearance.AppCompat.Headline"
                   android:layout_height="wrap_content"
                   android:text="@string/subscription"/>

               <TextView
                   android:layout_width="match_parent"
                   style="@style/TextAppearance.AppCompat.Headline"
                   android:textAlignment="center"
                   android:textAllCaps="true"
                   android:textSize="32sp"
                   android:layout_height="wrap_content"
                   android:text="@string/tsz_0"/>

               <android.support.design.widget.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <android.support.design.widget.TextInputEditText
                       android:layout_width="match_parent"
                       android:inputType="text"
                       android:id="@+id/signup_subscription"
                       android:hint="@string/type"
                       android:editable="false"
                       android:focusable="false"
                       android:text="@string/free"
                       android:layout_height="wrap_content" />
               </android.support.design.widget.TextInputLayout>

               <android.support.design.widget.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <android.support.design.widget.TextInputEditText
                       android:layout_width="match_parent"
                       android:hint="@string/status"
                       android:focusable="false"
                       android:editable="false"
                       android:text="@string/expire"
                       android:layout_height="wrap_content" />

               </android.support.design.widget.TextInputLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:weightSum="2"
                   style="?android:attr/buttonBarButtonStyle"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <Button
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       style="?android:attr/buttonBarButtonStyle"
                       android:layout_gravity="end"
                       android:id="@+id/profile_payment"
                       android:layout_height="wrap_content"
                       android:text="@string/pay"/>

                   <Button
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       style="?android:attr/buttonBarButtonStyle"
                       android:layout_gravity="start"
                       android:id="@+id/profile_payment_history"
                       android:layout_height="wrap_content"
                       android:text="@string/pay_history"/>
               </LinearLayout>

           </LinearLayout>

       </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>